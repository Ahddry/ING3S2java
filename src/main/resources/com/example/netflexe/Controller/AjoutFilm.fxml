<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane style="-fx-background-color: #242425;" stylesheets="@dark-theme.css" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.netflexe.Vue.AjoutFilm" prefHeight="720.0" prefWidth="1280.0">
    <GridPane minWidth="1152" prefWidth="-Infinity">
        <rowConstraints>
            <RowConstraints minHeight="20" percentHeight="10" />
            <RowConstraints minHeight="80" percentHeight="90" />
        </rowConstraints>
        <columnConstraints>
            <ColumnConstraints minWidth="10" percentWidth="15" />
            <ColumnConstraints minWidth="50" percentWidth="70" />
            <ColumnConstraints minWidth="10" percentWidth="15" />
        </columnConstraints>

        <FlowPane alignment="CENTER" GridPane.columnIndex="1" GridPane.rowIndex="1">
            <Button maxHeight="250" maxWidth="350" onAction="#existantBoutonClick" prefHeight="200" prefWidth="300" text="Film existant">
                <FlowPane.margin>
                   <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                </FlowPane.margin>
                <font>
                   <Font size="38.0" />
                </font>
            </Button>
            <Button onAction="#nouveauBoutonClick" text="Nouveau film" prefHeight="200" prefWidth="300">
                <font>
                    <Font size="38.0" />
                </font>
            </Button>

        </FlowPane>

    </GridPane>

</AnchorPane>
