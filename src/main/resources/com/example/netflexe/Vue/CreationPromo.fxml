<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="720.0" prefWidth="1138.0" styleClass="background" stylesheets="@dark-theme.css" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.netflexe.Vue.CreationPromoController">
    <Label alignment="CENTER" layoutX="323.0" layoutY="33.0" styleClass="label-header" text="Nouvelle promotion" />
    <Button layoutX="36.0" layoutY="31.0" mnemonicParsing="false" onAction="#retour" text="Retour" />
    <GridPane layoutX="241.0" layoutY="112.0" prefHeight="376.0" prefWidth="634.0">
        <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="60.0" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
        <columnConstraints>
            <ColumnConstraints />
            <ColumnConstraints />
        </columnConstraints>
        <FlowPane orientation="VERTICAL" prefHeight="368.0" prefWidth="402.0" GridPane.rowIndex="1">
            <TextField fx:id="nomPromo" prefHeight="38.0" prefWidth="342.0" promptText="Nom de la promotion" style="-fx-background-color: #1d1d1d; -fx-border-color: white;             -fx-border-radius: 6; -fx-text-fill: WHITE;">
                <FlowPane.margin>
                    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                </FlowPane.margin>
            </TextField>
            <TextField fx:id="valeurPromo" promptText="Valeur de la promotion (en %)" style="-fx-background-color: #1d1d1d; -fx-border-color: white;  -fx-border-radius: 6; -fx-text-fill: WHITE;">
                <FlowPane.margin>
                    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                </FlowPane.margin>
            </TextField>
            <TextField fx:id="ageMini" promptText="Age minimal pour bénéficier de la promo" style="-fx-background-color: #1d1d1d; -fx-border-color: white;  -fx-border-radius: 6; -fx-text-fill: WHITE;">
                <FlowPane.margin>
                    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                </FlowPane.margin>
            </TextField>
            <TextField fx:id="ageMaxi" promptText="Age maximal pour bénéficier de la promo" style="-fx-background-color: #1d1d1d; -fx-border-color: white;  -fx-border-radius: 6; -fx-text-fill: WHITE;">
                <FlowPane.margin>
                    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                </FlowPane.margin>
            </TextField>

        </FlowPane>
        <Button alignment="BOTTOM_RIGHT" onAction="#confirmerBoutonClick" text="Ajouter la promotion" GridPane.columnIndex="1" GridPane.rowIndex="1" />

    </GridPane>
</AnchorPane>
